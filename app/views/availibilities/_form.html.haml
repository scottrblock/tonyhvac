= form_for @availibility do |f|
  - if @availibility.errors.any?
    #error_explanation
      %h2= "#{pluralize(@availibility.errors.count, "error")} prohibited this availibility from being saved:"
      %ul
        - @availibility.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :contractor_id
    = f.number_field :contractor_id
  .field
    = f.label :day
    = f.text_field :day
  .field
    = f.label :start_time
    = f.time_select :start_time
  .field
    = f.label :end_time
    = f.time_select :end_time
  .actions
    = f.submit 'Save'
