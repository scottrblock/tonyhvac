= form_for @contractor do |f|
  - if @contractor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contractor.errors.count, "error")} prohibited this contractor from being saved:"
      %ul
        - @contractor.errors.full_messages.each do |msg|
          %li= msg
  .row
    .col-md-6
      .form-group
        = f.label :email
        = f.email_field :email, :class => "form-control"
  .row
    .col-md-12
      .form-inline.customer-name-input
        .form-group
          = f.label :subFirstName do
            First Name
          = f.text_field :subFirstName, :class => "form-control"
        .form-group
          = f.label :subMiddleInitial do
            Middle Initial
          = f.text_field :subMiddleInitial, :class => "form-control", :size => 1, :maxLength => 1
        .form-group
          = f.label :subLastName do
            Last Name
          = f.text_field :subLastName, :class => "form-control"
  .form-group
    = f.label :subtStreetAddress do
      Street Address
    = f.text_field :subStreetAddress, :class => "form-control"
  .row
    .col-md-5
      .form-group
        = f.label :subCity do
          City
        = f.text_field :subCity, :class => "form-control"
    .col-md-3
      .form-group
        = f.label :subZip do
          Zipcode
        = f.text_field :subZip, :class => "form-control", :size => 5, :maxLength => 5
    .col-md-4
      .form-group
        = f.label :subState do
          State
        = f.select :subState, options_for_select(us_states), {:prompt => "Choose a state"}, {:class => "form-control"}

  .actions
    = f.submit 'Save'
